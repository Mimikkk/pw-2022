@using pw_2022.Shared.Types

@code {
  [Parameter, EditorRequired]
  public IconType Type { get; set; } = null!;
  [Parameter]
  public Size Size { get; set; } = Size.Md;
  [Parameter]
  public Color Color { get; set; } = Color.Primary;
  [Parameter]
  public Color Contour { get; set; } = Color.Shade;
  [Parameter]
  public bool Inverted { get; set; }
}

<div class="@Cx(Size.Height, $"hover:{Color["bg", Inverted ? 7 : 3]}", Contour["text", Inverted ? 0 : 9], "p-0.5 aspect-square rounded-lg transition-all")">
  <svg
    class="@Cx(@Color.Accent["fill", 2], $"hover:{Color.Accent["fill", 5]}", "transition-all")"
    xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
    @Type.Component
  </svg>
</div>
