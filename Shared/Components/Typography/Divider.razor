@if (Vertical) {
  <hr class="@Cx("h-full border-t-0 w-0 border-l", Color["border", 7], Class)"/>
} else {
  <hr class="@Color["border", 7]"/>
}

@code {
  [Parameter]
  public Color Color { get; set; } = Color.Primary;
  [Parameter]
  public string? Class { get; set; }
  [Parameter]
  public bool Vertical { get; set; }
}
