<label for="@Name" class="group h-10 items-center flex rounded border border-slate-500 bg-white gap-1 px-2 cursor-text focus-within:outline-1 focus-within:outline">
  @if (Icon is not null) {
    <Icon Type="@Icon" Size="Size.Sm" Interactive Class="cursor-pointer"/>
    <Typography>|</Typography>
  }
  <div class="relative">
    <input id="@Name" class="px-2 rounded w-full outline-none" placeholder=" "/>
    @if (Label is not null) {
      <label for="@Name" class="label">@Label</label>
    }
  </div>
</label>

@code {
  [Parameter, EditorRequired]
  public string Name { get; set; } = null!;

  [Parameter]
  public string? Value { get; set; }

  [Parameter]
  public string? Label { get; set; }

  [Parameter]
  public IconType? Icon { get; set; }
}
