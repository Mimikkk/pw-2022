@page "/"

<PageTitle>UI | Encyclopedia</PageTitle>

<div class="px-2 py-4 flex flex-col gap-2">
  <Card>
    <CardHeader>
      <Title>Encyklopedia występowania</Title>
    </CardHeader>
    <Typography>
      Aplikacja zaliczeniowa utworzona na rzecz przedmiotu <strong>Programowanie Wizualne</strong>.
    </Typography>
    <Typography>
      Jest to encyklopedia pozwalająca na katalogowanie wystepujących ras oraz produktów, ktore te rasy są w stanie wytworzyć.
    </Typography>
  </Card>
  <Card Color="Color.Secondary">
    <NavLink href="goods">
      <Typography Interactive Class="flex">
        <Icon Size="Size.Sm" Type="IconType.RightChevronDouble"/>
        Przejdź do katalogu&nbsp;
        <strong>
          Dóbr
        </strong>
        .
      </Typography>
    </NavLink>
  </Card>
  <Card Color="Color.Secondary">
    <NavLink href="races">
      <Typography Interactive Class="flex">
        <Icon Size="Size.Sm" Type="IconType.RightChevronDouble"/>
        Przejdź do katalogu&nbsp;
        <strong>
          Ras
        </strong>
        .
      </Typography>
    </NavLink>
  </Card>
</div>
<span>
  @IsOpen()
</span>
<Icon Type="IconType.X" Interactive OnClick="() => Toggle(null)"/>
<Modal Class="h-48 min-w-[600px]" IsOpen="@IsOpen()">
  <ModalHeader OnClose="() => Toggle(null)">Tytuł Modala</ModalHeader>
  <ModalActions OnSubmit="() => Toggle(null)">
  </ModalActions>
</Modal>

@code {
  private Func<bool> IsOpen = null!;
  private Action<bool?> Toggle = null!;

  protected override void OnInitialized() =>
    (IsOpen, Toggle) = CreateToggle(this);
}
